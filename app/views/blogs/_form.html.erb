<%= form_for @blog do |f| %>

<%= f.label :title%>
<%= f.text_field :title%>
<br>
<%= f.label :content%>
<%= f.text_area :content%>
<br>

<%= f.label :main_photo%>
<%= f.file_field :main_photo %>
<br>

<%= f.label :category%>
<%= select_tag('category', options_from_collection_for_select(Category.all(), "id", "category") )%>
<br>

<%= f.submit %>

<%= @blog.errors.full_messages %>

<%end %>