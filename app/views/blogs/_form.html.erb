<%= form_for @blog do |f| %>

<%= f.label :title%>
<%= f.text_field :title%>
<br>
<%= f.label :content%>
<%= f.text_area :content%>
<br>

<%= f.label :main_photo%>
<%= f.file_field :main_photo %>
<br>

<%= f.label :category%>
<%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %>

<br>

<%= f.submit %>

<br>

<%= @blog.errors.full_messages %>

<%end %>